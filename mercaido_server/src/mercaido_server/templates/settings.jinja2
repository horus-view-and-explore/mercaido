{% extends "mercaido_server:templates/layout.jinja2" %}
{% block body %}
<div class="row" style="gap: 0.75rem">
  <div class="col s12">
    <h1>Settings</h1>
  </div>
</div>
<div class="row">
  <div class="col s6">
    <div class="collection">
      <a href={{ "media_servers" | route_path() }} class="collection-item">
        Media servers
        <span class="secondary-content"><i class="material-icons">chevron_right</i></span>
        <span class="badge">{{ media_servers }}</span>
      </a>
      <a href={{ "recording_servers" | route_path() }} class="collection-item">
        Recording servers
        <span class="secondary-content"><i class="material-icons">chevron_right</i></span>
        <span class="badge">{{ recording_servers }}</span>
      </a>
      <a href={{ "feature_servers" | route_path() }} class="collection-item">
        Feature servers
        <span class="secondary-content"><i class="material-icons">chevron_right</i></span>
        <span class="badge">{{ feature_servers }}</span>
      </a>
    </div>
  </div>
</div>
{% endblock body %}
